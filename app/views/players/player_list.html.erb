<h1>
	Buscar Jugadores
	<%= link_to "Regresar", players_path, class: "btn btn-default btn-xs" %>
	</h1>

<div class="row">
	<div class="col-xs-6 text-center">
			
			<%= form_tag list_path, method: 'get' do %>
				<div class="input-group">
					<%= text_field_tag :search, params[:search], placeholder: "Buscar Jugador", class: "form-control"  %>
					<span class="input-group-btn">
			    	<%= submit_tag "Buscar", class: "btn btn-default " %>	
			    </span>
				</div>
			<% end %>

	</div>
</div>

<table class="table table-condensed">
	<thead>
		<tr>
			<th>Jugador</th>
			<th>Nombre</th>
			<th>Rating</th>
			<th>Posisic√≥n</th>
			<th>Tipo</th>
			<th>Precio Actual</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
	<% @counter.each do |i| %>	
		<tr style="max-height: 10px">
			<td ><%= image_tag URI.encode(@images[i]), height: '64',  class: "img-circle" %></td>
			<td><%= @names[i] %></td>
			<td><%= @rates[i] %></td>
			<td><%= @positions[i] %></td>
			<td><%= @types[i] %></td>
			<td><%= @prices[i] %></td>
			<td>
				<%= link_to "Ver Futbin", "https://www.futbin.com" + @listings[i], class: "btn btn-primary btn-xs", target: "_blank" %>
				<%= link_to "Agregar a mi lista", new_player_path(name: @names[i] + " " + @positions[i] + " " + @rates[i], url: "https://www.futbin.com" + URI.encode(@listings[i]), img: URI.encode(@images[i]), tp: @types[i]), class: "btn btn-success btn-xs" %>
			</td>
		</tr>
	<% end %>
	</tbody>




</table>