<h1 align="center">
	Perfil de usuario
		
</h1>

<div class="row">
	<div class="col-xs-6 col-xs-offset-3 text-center">
			
			<%= form_tag list_path, method: 'get' do %>
				<div class="input-group">
					<%= text_field_tag :search, params[:search], placeholder: "Buscar Jugador", class: "form-control"  %>
					<span class="input-group-btn">
			    	<%= submit_tag "Buscar", class: "btn btn-default " %>	
			    </span>
				</div>
			<% end %>

	</div>
</div>

<div class="row">
	<div class="col-xs-12 col-sm-6">
		<div class="col-xs-10">
		<h2>Información general:</h2>
		
			<ul class="list-group">
				<li class="list-group-item">Nombre: <%= current_user.name if current_user %></li>
				<li class="list-group-item">Nombre: <%= current_user.email %></li>
				<li class="list-group-item">Editar Usuario: <%= link_to "Editar", edit_user_path(current_user), class: "btn btn-xs btn-primary" %></li>
			</ul>	
		</div>
	</div>

	<div class="col-xs-6">
		<div class="col-xs-10">
		<h2>Información de Jugadores:</h2>
		
			<ul class="list-group">
				<li class="list-group-item">Total en seguimiento: <%= current_user.players.count if current_user.players %></li>
				<li class="list-group-item">Total comprados: <%= current_user.players.where(buyed: true).count %></li>
				<li class="list-group-item">Notificación de jugadores: <%= current_user.players.where(mail: true).count %></li>
				<li align="center"	class="list-group-item"><%= link_to "Ver Jugadores", players_path, class: "btn btn-success"	 %> </li>
			</ul>	
		</div>
	</div>
</div>



